<div>

<section>
            <div class="box">
                <div class="form">
                    <div class="imgLogin">
                        <img src="/img/iconProfileAdmi.png" class="imgLo">
                    </div>
                    <h2>Login</h2>
                    <form action="" method="post">
                        <div class="inDatos">
                            <input type="text" name="email" placeholder="Username" required>
                            <img src="/img/iconLoginUser.png">
                        </div>
                        <div class="inDatos">
                            <input type="password" name="password" placeholder="password" required>
                            <img src="/img/iconLoginPassword.png">
                        </div>
                        <div class="inDatos">
                            <input type="submit" value="Send">
                        </div>
                    </form>
                    {{#if error}}
                        <p class="inDatos">*{{error}}</p>
                    {{/if}}
                </div>
            </div>
        </section>
</div>